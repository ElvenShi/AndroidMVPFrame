<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@drawable/selector_list_item_bg">

        <TextView
            android:id="@+id/list_dialog_tv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="xiaoming"
            android:textColor="@color/main_color"
            android:textSize="16sp"
            android:background="@null"/>

        <ImageView
            android:id="@+id/list_dialog_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:src="@drawable/common_icon_selected_alert" />
    </RelativeLayout>
    
    <View
        android:id="@+id/list_dialog_divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/app_list_bg_color" />

</LinearLayout>