<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:orientation="vertical">

    <ListView
        android:id="@+id/lv_data_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@android:color/white"
        android:choiceMode="singleChoice"
        android:clickable="true"
        android:divider="@null"
        android:listSelector="@drawable/selector_list_item_bg"
        android:scrollbars="none" />

    <LinearLayout
        android:id="@+id/eee"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <View
            android:id="@+id/view_divider"
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="@color/gray" />

        <TextView
            android:id="@+id/tv_sf_list_dialog_cancel"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:background="@drawable/selector_list_item_bg"
            android:gravity="center"
            android:text="@string/cancel"
            android:textColor="@android:color/black"
            android:textSize="16sp" />

        <View
            android:id="@+id/view_bottom_divider"
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:layout_alignParentBottom="true"
            android:background="@color/gray" />
    </LinearLayout>
</LinearLayout>

