<resources>

    <!-- Base application theme. -->
    <style name="AppBaseTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="AppTheme" parent="AppBaseTheme">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/white</item>
        <item name="android:windowAnimationStyle">@style/ActivityAnimation</item>
    </style>
    <!--Loading-->
    <style name="LoadAppTheme" parent="AppBaseTheme">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowBackground">@drawable/app_launcher</item>
    </style>
    <!--Activity 左右切换动画-->
    <style name="ActivityAnimation" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/activity_slide_in_from_right</item>
        <item name="android:activityOpenExitAnimation">@anim/activity_slide_out_to_right</item>
        <item name="android:activityCloseEnterAnimation">@anim/activity_slide_in_from_left</item>
        <item name="android:activityCloseExitAnimation">@anim/activity_slide_out_to_left</item>
    </style>

    <style name="unread_count_style">
        <item name="android:background">@drawable/unread_round</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/font10</item>
    </style>

</resources>
