<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="@dimen/space_60"
              android:background="@color/no_opacity_95_white"
              android:orientation="horizontal">

    <RelativeLayout
        android:id="@+id/rl_chat"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <RadioButton
            android:id="@+id/rbtn_chat"
            android:layout_width="@dimen/space_25"
            android:layout_height="@dimen/space_25"
            android:layout_centerInParent="true"
            android:background="@drawable/main_bottom_chat_selector"
            android:button="@null"/>

        <TextView
            android:id="@+id/tv_unread_chat"
            style="@style/unread_count_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/rbtn_chat"
            android:layout_marginLeft="@dimen/space_16"
            android:layout_marginTop="@dimen/space_14"
            android:text="99+"
            android:visibility="gone"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_contact"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <RadioButton
            android:id="@+id/rbtn_contact"
            android:layout_width="@dimen/space_25"
            android:layout_height="@dimen/space_25"
            android:layout_centerInParent="true"
            android:background="@drawable/main_bottom_contact_selector"
            android:button="@null"/>

        <TextView
            android:id="@+id/tv_unread_contact"
            style="@style/unread_count_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/rbtn_contact"
            android:text=""
            android:layout_marginLeft="@dimen/space_16"
            android:layout_marginTop="@dimen/space_14"
            android:visibility="gone"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_setting"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <RadioButton
            android:id="@+id/rbtn_setting"
            android:layout_width="@dimen/space_25"
            android:layout_height="@dimen/space_25"
            android:layout_centerInParent="true"
            android:background="@drawable/main_bottom_setting_selector"
            android:button="@null"/>

        <TextView
            android:id="@+id/tv_unread_setting"
            style="@style/unread_count_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/rbtn_setting"
            android:text=""
            android:layout_marginLeft="@dimen/space_16"
            android:layout_marginTop="@dimen/space_14"
            android:visibility="gone"/>
    </RelativeLayout>


</LinearLayout>
